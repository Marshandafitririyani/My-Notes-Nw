<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="fragment"
            type="com.example.mynotes.home.screen.HomeFragment" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".home.screen.HomeFragment">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchhome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:background="@drawable/custome_background_text_view_3"
            android:elevation="20dp"
            android:layoutDirection="rtl"
            app:defaultQueryHint="search notes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:queryHint="search notes"
            app:searchIcon="@drawable/ic__search" />

        <ImageView
            android:id="@+id/ivSecrol"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="20dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@id/searchhome"
            app:layout_constraintStart_toStartOf="@id/searchhome"
            app:layout_constraintTop_toTopOf="@id/searchhome"
            app:layout_constraintBottom_toBottomOf="@id/searchhome"/>

        <!--        <ScrollView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="60dp">-->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="30dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="10"
            tools:listitem="@layout/custome_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchhome"/>
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->

        <!--        </ScrollView>-->


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>